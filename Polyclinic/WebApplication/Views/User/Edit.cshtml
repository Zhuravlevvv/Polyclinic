@model BusinessLogic.BindingModel.UsersBindingModel

@{
    ViewData["Title"] = "Личные данные";

}

    <div class="text-center text-info">
        <h1>Личные данные</h1>
    </div>

<hr />
<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FIO" class="control-label mt-3"></label>
                <input asp-for="FIO" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label mt-3"></label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label mt-3"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label mt-3"></label>
                <input asp-for="Status" class="form-control" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}