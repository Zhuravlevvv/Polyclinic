@model WebApplication.Models.LoginModel

@{
    ViewData["Title"] = "Авторизация";
}
<div class="text-left text-info">
    <h1>@ViewData["Title"]</h1>
</div>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @style = "color: red" })
    <label class="control-label">Логин:<br /></label>
    <br>
    @Html.EditorFor(x => x.FIO)
    <br>
    <label class="control-label">Пароль:<br /></label>
    <br>
    @Html.EditorFor(x => x.Password)
    <br/>
    <label class="control-label">Выберите статус:<br /></label>
    <br />
    <select id="Status" name="Status">
        <option>Сотрудник</option>
        <option>Клиент</option>
    </select>
    <br/>
    <br/>
    <button class="btn btn-info btn-sm" type="submit">Войти</button>
}