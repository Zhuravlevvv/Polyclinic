@{
    ViewData["Title"] = "Затраты по обследованию";
}
<div class="text-center text-info">
    <h1>Затраты по обследованию @ViewBag.name</h1>
</div>
<a class="btn btn-primary btn-sm" asp-controller="Doctor" asp-action="AddInspection" asp-route-id="@ViewBag.Id">Изменить затраты</a>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<table class="table">
    <tr>
        <td>Название</td>
        <td>Цена</td>
    </tr>
    @foreach (var ins in ViewBag.Name.costInspections)
    {
        @foreach (var cost in ViewBag.Cost)
        {
            @if (cost.Id == ins.Key)
            {
                @if ((ins.Value != 0))
                {
                    <tr>

                        <td>@cost.Name</td>

                        <td>@ins.Value</td>
                        <td>
                            <a class="btn btn-primary btn-sm btn-block" asp-action="DeleteIC" asp-route-id1="@ViewBag.Name.Id" asp-route-id="@cost.Id">Удалениe</a>
                        </td>
                    </tr>
                }
            }
        }
    }
</table>